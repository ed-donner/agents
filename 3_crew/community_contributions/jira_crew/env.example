# Copy to .env and fill in your values.

# LLM: local Ollama (default)
USE_OLLAMA=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Or use Gemini instead
# USE_OLLAMA=false
# GOOGLE_API_KEY=your-gemini-api-key

# Jira Cloud (for list epics/sprints/boards, create epic/sprint)
# Example: https://padmanabhbosamia.atlassian.net (project SCRUM, board 1)
JIRA_BASE_URL=https://your-site.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
# Optional: filter boards by project and/or default board (so board 1 shows)
# JIRA_PROJECT_KEY=SCRUM
# JIRA_BOARD_ID=1
